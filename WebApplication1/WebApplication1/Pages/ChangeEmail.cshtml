@page
@model WebApplication1.Pages.ChangeEmailModel
@{
}

<div class="container" mt-5>
    <div class="row justify-content-center align-items-center">

        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Change Email</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.UserName">Username</label>
                    <input type="text" asp-for="Model.UserName" class="form-control" />
                    <span asp-validation-for="Model.UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.NewEmail">New Email</label>
                    <input type="email" asp-for="Model.NewEmail" class="form-control" />
                    <span asp-validation-for="Model.NewEmail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.ConfirmEmail">Confirm Email</label>
                    <input type="email" asp-for="Model.ConfirmEmail" class="form-control" />
                    <span asp-validation-for="Model.ConfirmEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Change Email or Username</button>
                </div>
            </form>
        </div>
    </div>
</div>